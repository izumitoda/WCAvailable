<view class="choice">
    <view class="selector_title">Building  Gender</view> 
    <picker-view  style="width: 100%; height: 180rpx;" value="{{value}}" bindchange="bindChange">
        <picker-view-column >
            <view  class="selector" wx:for="{{buildingArray}}" wx:key="{{index}}">B{{item}}</view>
        </picker-view-column>
        <picker-view-column>
            <view class="selector" wx:for="{{genderArray}}" wx:key="{{index}}">{{item}}</view>
        </picker-view-column>               
    </picker-view>    
</view>
<view class='button' bindtap='switchToWCFinding'>Find  WC</view>

<scroll-view class="WCSearch_content">
  <view class="table">
      <view wx:for="{{cubiclesInfo}}" wx:for-key="key" wx:for-item="value">
        <WCs building="{{value.building}}" floor="{{value.floor}}" gender="{{value.gender}}" side="{{value.side}}" numbers="{{value.numbers}}" ></WCs>
      </view>
    </view>
</scroll-view>
